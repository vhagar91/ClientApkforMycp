<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@android:color/black"
    tools:context=".view.activities.ActivityDetail">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/toolbar_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_back_start"
        android:paddingBottom="50dp">
        <ImageButton
            android:id="@+id/btn_prevv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/selector_btn_transparent"
            app:srcCompat="@drawable/vector_arrow_prev"
            android:tint="@android:color/white"
            android:contentDescription="@string/app_name"/>
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/selector_btn_transparent"
            app:srcCompat="@drawable/vector_close"
            android:tint="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="50dp"
        android:background="@drawable/shape_back_favorite">
        <LinearLayout
            android:id="@+id/paginator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_lateral_container_social"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_prev_next"
                app:srcCompat="@drawable/vector_slide_prev"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="@dimen/space_between_social"
                android:layout_marginRight="@dimen/space_between_social"
                android:text="1"/>
            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_prev_next"
                app:srcCompat="@drawable/vector_slide_next"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
