    <style name="title_toolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_toolbar</item>
    </style>

    <style name="title_card">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_card</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_title_card">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sub_title_card</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="sub_title_card_bold">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sub_title_card</item>
