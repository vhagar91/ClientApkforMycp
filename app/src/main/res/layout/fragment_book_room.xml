<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shape_book_room"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center"
            android:text="@string/doubleroom"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_blue"/>
        <!--from_c-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_c"
                android:textColor="@color/text_loging"
                android:textSize="@dimen/text_very_small"
                style="@style/text_card"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/from_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/int_eur_price"
                android:textColor="@color/text_blue"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/text_card"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/separator_mycasa"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/relative_layout_mycasa"
        android:layout_toRightOf="@+id/relative_layout_mycasa"
        android:background="@color/card_border">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frame_una"
        android:layout_width="0dp"
        android:layout_weight="0.59"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/unavailable"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_blue"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/room_guest"
        android:layout_width="0dp"
        android:layout_weight="0.59"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/separator_mycasa"
        android:layout_toRightOf="@+id/separator_mycasa"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="gone">
        <Spinner
            android:id="@+id/book_adults"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:drawSelectorOnTop="true"
            android:background="@drawable/shape_spinner"/>
        <Spinner
            android:id="@+id/book_childrens"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:drawSelectorOnTop="true"
            android:background="@drawable/shape_spinner"/>
    </LinearLayout>
</LinearLayout>