<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_alll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_payment_room"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
    android:clickable="true">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">
        <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
            <TextView
                    android:id="@+id/title_accommodation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Casa Miguel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/destination_accommodation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Santiago de Cuba"
                    android:textColor="@color/text_loging"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                    android:id="@+id/room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/doubleroom"
                    android:textColor="@color/text_loging"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                    android:id="@+id/cap_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Adults: 4, Children: 1"
                    android:textColor="@color/text_loging"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/date_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="31/08/2017 - 02/09/2017"
                    android:textColor="@color/text_loging"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/separator_mycasa"
            android:layout_toRightOf="@+id/separator_mycasa"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingRight="10dp">
        <TextView
            android:id="@+id/cas_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="CAS.0000"
                android:textColor="@color/text_blue"
                android:layout_gravity="center|right"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/text_card"/>

        <TextView
                android:id="@+id/total_price_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="00.00"
                android:textColor="@color/text_blue"
                android:layout_gravity="center|right"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/text_card"/>
    </LinearLayout>
</LinearLayout>