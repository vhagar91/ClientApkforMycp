<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fragment_margin_bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_view_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/text_loging"
            android:background="@drawable/container_vector_profile"
            android:src="@drawable/transparent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/home_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/int_home_title"
                android:textColor="@color/text_blue"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/text_card"
                android:textAllCaps="true"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/own_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/int_client_name"
                android:textColor="@color/color_btn_green"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/text_card"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <com.richpath.RichPathView
                    android:id="@+id/star_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/margin_start"
                    android:layout_marginStart="@dimen/margin_start"
                    app:vector="@drawable/vector_start_ok"/>
                <com.richpath.RichPathView
                    android:id="@+id/star_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/margin_start"
                    android:layout_marginStart="@dimen/margin_start"
                    app:vector="@drawable/vector_start_ok"/>
                <com.richpath.RichPathView
                    android:id="@+id/star_3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/margin_start"
                    android:layout_marginStart="@dimen/margin_start"
                    app:vector="@drawable/vector_start_ok"/>
                <com.richpath.RichPathView
                    android:id="@+id/star_4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/margin_start"
                    android:layout_marginStart="@dimen/margin_start"
                    app:vector="@drawable/vector_start_ok"/>
                <com.richpath.RichPathView
                    android:id="@+id/star_5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/margin_start"
                    android:layout_marginStart="@dimen/margin_start"
                    app:vector="@drawable/vector_start_ok"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/text_loging"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/int_home_desc"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <WebView
            android:id="@+id/description_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/card_border">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_coin"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_btn_green"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:text="@string/prices_from"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/min_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_btn_green"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:text="@string/int_eur_price"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layout_action_map"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:clickable="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_location"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/accommodation_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_btn_green"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="start|center"
                android:text="@string/int_destination_name"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/card_border">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_home"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/accommodation_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/int_type_home"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_guests"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/home_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/min_guests"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_bedrooms"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/accommodation_beedrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/beedrooms"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_lang"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:paddingLeft="2dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_lan"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/accommodation_lan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/card_border">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_btn_green"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:lines="1"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/label_services"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/services_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_green_border"
            android:text="@string/label_see_all"
            android:textColor="@color/color_btn_green"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            android:minHeight="0dp"
            android:padding="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/breakfast"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_rate"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/label_breakfast"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/breakfast_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/int_eur_price"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dinner"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_dinner"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/label_dinner"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/dinner_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/int_eur_price"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/parking"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@color/text_loging"
                app:srcCompat="@drawable/vector_parking"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_loging"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/label_parking"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>