<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageButton
                android:id="@+id/fm_clear_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@mipmap/reset_route"
                android:contentDescription=""/>

            <LinearLayout
                android:id="@+id/fm_layout_distance"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/color_btn_black"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <ImageView
                    android:id="@+id/al_image_view_mcp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="contentDescription"
                    android:src="@mipmap/finish"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/fm_t_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/distance"
                        style="@style/btn_title_medium"/>
                    <TextView
                        android:id="@+id/fm_distance_route"
                        android:layout_below="@+id/fm_t_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="23 km"
                        android:gravity="center_vertical"
                        style="@style/btn_title_medium"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/img_btn_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_btn_zoom_in"/>

        <ImageButton
            android:id="@+id/img_btn_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_btn_zoom_in"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_btn_zoom_out"/>

        <ImageButton
            android:id="@+id/fm_route_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/animation_indications"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_goup"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_get_location"
            android:contentDescription="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/selector_btn_circle_black"
            android:src="@mipmap/map_white_"/>

        <LinearLayout
            android:id="@+id/layout_route"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight=".33"
                android:layout_marginRight="1dp">
                <ImageButton
                    android:id="@+id/fm_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_black"
                    android:src="@mipmap/car"
                    android:padding="15dp"
                    style="@style/btn_title_large"/>
                <ImageView
                    android:id="@+id/arrow_fm_car"
                    android:visibility="invisible"
                    android:elevation="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight=".34">
                <ImageButton
                    android:id="@+id/fm_bike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_black"
                    android:src="@mipmap/bike"
                    android:gravity="center"
                    android:padding="15dp"
                    style="@style/btn_title_large"/>
                <ImageView
                    android:id="@+id/arrow_fm_bike"
                    android:visibility="invisible"
                    android:elevation="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight=".33"
                android:layout_marginLeft="1dp">
                <ImageButton
                    android:id="@+id/fm_foot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_black"
                    android:src="@mipmap/foot"
                    android:padding="15dp"
                    style="@style/btn_title_large"/>
                <ImageView
                    android:id="@+id/arrow_fm_foot"
                    android:visibility="invisible"
                    android:elevation="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>