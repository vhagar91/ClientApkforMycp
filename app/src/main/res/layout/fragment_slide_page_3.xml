<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_1_page_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_1_page_4"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        style="@style/sub_sub_title_card"/>

    <LinearLayout
        android:id="@+id/layout_route_help"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text_1_page_4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:layout_marginRight="1dp">
            <ImageButton
                android:id="@+id/fm_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_transparent"
                android:src="@mipmap/car"
                android:padding="15dp"
                style="@style/btn_title_large"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".34">
            <ImageButton
                android:id="@+id/fm_bike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_transparent"
                android:src="@mipmap/bike"
                android:gravity="center"
                android:padding="15dp"
                style="@style/btn_title_large"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:layout_marginLeft="1dp">
            <ImageButton
                android:id="@+id/fm_foot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_transparent"
                android:src="@mipmap/foot"
                android:padding="15dp"
                style="@style/btn_title_large"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_2_page_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_2_page_4"
        android:gravity="center"
        android:padding="5dp"
        android:layout_below="@+id/layout_route_help"
        android:layout_centerHorizontal="true"
        style="@style/sub_sub_title_card"/>

</RelativeLayout>