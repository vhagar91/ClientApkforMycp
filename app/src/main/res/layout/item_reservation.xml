<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@drawable/shape_payment_room"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_accommodation"
                    android:textColor="@color/color_btn_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Casa Miguel"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/destination_accommodation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Santiago de Cuba"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_loging"/>

                <TextView
                    android:id="@+id/room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="DOUBLE ROOM"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_loging"/>

                <TextView
                    android:id="@+id/cap_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Adults: 4, Children: 1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_loging"/>

                <TextView
                    android:id="@+id/date_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="31/08/2017 - 02/09/2017"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_loging"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/separator_mycasa"
                android:layout_toRightOf="@+id/separator_mycasa"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/cas_e"
                    style="@style/text_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="CAS.1574"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_blue"/>



                <TextView
                    android:id="@+id/total_price_f"
                    style="@style/text_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="80.50"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_blue"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@color/card_border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"

            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/action_map"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="1dp"
                app:srcCompat="@drawable/vector_location_w"
                android:background="@drawable/transparent"
                android:tint="@color/text_loging"
                 />

            <ImageButton
                android:id="@+id/action_download"
                android:layout_marginTop="8dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/download"
                android:background="@drawable/transparent"
                android:tint="@color/text_loging"
                />

            <ImageButton
                android:id="@+id/voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/vector_detail"
                android:background="@drawable/transparent"
                android:tint="@color/text_loging"
                />

            <RelativeLayout
                android:id="@+id/btn_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/active_start"

                android:text="Booked!"


                >

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:padding="12dp"
                    android:text="BOOKED!"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>