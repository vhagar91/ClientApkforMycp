<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_1_page_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_1_page_3"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        style="@style/sub_sub_title_card"/>

    <ImageButton
        android:id="@+id/btn_1_page_3"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_below="@+id/text_1_page_6"
        android:background="@drawable/selector_btn_transparent"
        android:src="@mipmap/origin"/>

    <TextView
        android:id="@+id/text_2_page_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_2_page_3"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_below="@+id/btn_1_page_3"
        android:layout_centerHorizontal="true"
        style="@style/sub_sub_title_card"/>

    <ImageButton
        android:id="@+id/btn_2_page_3"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_below="@+id/text_2_page_3"
        android:background="@drawable/selector_btn_transparent"
        android:src="@mipmap/destination"/>

</RelativeLayout>