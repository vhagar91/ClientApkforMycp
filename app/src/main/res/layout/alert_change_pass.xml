<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/frame_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/load_mask_bg"
                android:clickable="true"
                android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_payment_room"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/change_pass"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"/>

            <ImageButton
                android:id="@+id/btn_closex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_btn_circle"
                android:padding="10dp"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/vector_close"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/current_password"
                style="@style/edit_text_home_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/container_vector_pass"
                android:drawableRight="@drawable/container_vector_pass"
                android:drawableTint="@color/card_border"
                android:hint="@string/current_pass"
                android:inputType="textPassword"
                android:maxLines="1"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/password"
                style="@style/edit_text_home_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/container_vector_pass"
                android:drawableRight="@drawable/container_vector_pass"
                android:drawableTint="@color/card_border"
                android:hint="@string/hint_new_pass"
                android:inputType="textPassword"
                android:maxLines="1"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/r_password"
                style="@style/edit_text_home_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/container_vector_pass"
                android:drawableRight="@drawable/container_vector_pass"
                android:drawableTint="@color/card_border"
                android:hint="@string/hint_pass_repeat"
                android:inputType="textPassword"
                android:maxLines="1"/>

            <Button
                android:id="@+id/button_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_pass"
                android:gravity="center"
                android:background="@drawable/selector_btn_green"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>